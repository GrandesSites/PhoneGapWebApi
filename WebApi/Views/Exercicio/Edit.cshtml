@model WebApi.Domain.Models.TB_Exercicios

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Internas.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edição de tipos de exercicios</legend>


        @Html.HiddenFor(X=>X.ID_EXERCICIO)
        <div class="editor-label">
            Descrição do exercicio
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DS_EXERCICIO,null, new {required = "required"})
        </div>

        <div class="editor-label">
            Id do YouTube
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ID_YOUTUBE)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
